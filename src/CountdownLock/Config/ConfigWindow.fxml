<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:id="gridPane"
          fx:controller="CountdownLock.Config.ConfigWindow"
          xmlns="http://javafx.com/javafx"
          alignment="CENTER"
          vgap="60"
          hgap="40">

    <Label styleClass="title"
           GridPane.rowIndex="0" GridPane.columnIndex="0"
           GridPane.columnSpan="2"
           GridPane.halignment="CENTER"
           text="Configuration"/>

    <Label styleClass="config-label"
           GridPane.rowIndex="1" GridPane.columnIndex="0"
           text="Mots à trouver: "/>
    <TextField fx:id="words"
               styleClass="config-field"
               GridPane.rowIndex="1" GridPane.columnIndex="1"
               onKeyReleased="#updateButtonState"/>

    <Label styleClass="config-label"
           GridPane.rowIndex="2" GridPane.columnIndex="0"
           text="Durée du chronomètre:"/>
    <Spinner fx:id="timer"
             styleClass="config-field"
             GridPane.rowIndex="2" GridPane.columnIndex="1"
             maxWidth="100"
             initialValue="20"
             min="5"
             max="60"
             amountToStepBy="5"/>

    <Label styleClass="config-label"
           GridPane.rowIndex="3" GridPane.columnIndex="0"
           text="Activer l'aide:"/>
    <CheckBox fx:id="help"
              GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <HBox
            GridPane.rowIndex="4" GridPane.columnIndex="1"
            GridPane.halignment="RIGHT"
            spacing="20">
        <Label fx:id="submitLabel"
               styleClass="error-label"
               text="Vous devenez entrer&#13;au moins un mot."/>
        <Button fx:id="submitButton"
                text="Valider"
                disable="true"
                onAction="#handleSubmitButtonAction"/>
    </HBox>

</GridPane>
